<ui:FluentWindow x:Class="ExHyperV.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:pages="clr-namespace:ExHyperV.Views.Pages"

                 xmlns:markup="clr-namespace:ExHyperV.Markup"
                 mc:Ignorable="d"
                 Title="{markup:Localized ApplicationName}" Height="700" Width="1000"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <!-- Layout planning -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title bar -->
        <ui:TitleBar Title="{markup:Localized ApplicationName}" VerticalAlignment="Center" Grid.ColumnSpan="2">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Margin="-3,-16,0,-16" Width="20" Height="20">
                    <ui:ImageIcon.Source>
                        <BitmapImage UriSource="pack://application:,,,/Assets/app.png" />
                    </ui:ImageIcon.Source>
                </ui:ImageIcon>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- Left side menu -->
        <ui:NavigationView x:Name="RootNavigation" Grid.Row="1" Grid.Column="0" OpenPaneLength="200" IsPaneOpen="False"
                           IsBackButtonVisible="Collapsed" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="{markup:Localized Main}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:MainPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Content="{markup:Localized complisetting}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:StatusPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE9D9;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    x:Name="Dda"
                    Content="{markup:Localized DDA}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:DdaPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="ToggleMultiple24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    x:Name="Gpupv"
                    Content="{markup:Localized gpupvv}"
                    NavigationCacheMode="Enabled"
                    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                    TargetPageType="{x:Type pages:GpuPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Grid28" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="{markup:Localized Settings}"
                    NavigationCacheMode="Disabled"
                    TargetPageType="{x:Type pages:Setting}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>

        </ui:NavigationView>

        <!-- Dialog popup, spans two cells, centered display, defined in DDAcs -->
        <ContentPresenter Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                          x:Name="ContentPresenterForDialogs" />
        <ui:SnackbarPresenter Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" x:Name="SnackbarPresenter" />

    </Grid>
</ui:FluentWindow>