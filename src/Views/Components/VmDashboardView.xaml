<UserControl x:Class="ExHyperV.Views.Components.VmDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:tools="clr-namespace:ExHyperV.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer Padding="24,24,24,24" VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- 替换原来的 处理器(CPU) Border 块 -->
            <Border Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" 
        BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
        CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 标题栏 -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="处理器 (CPU)" FontSize="15" FontWeight="Medium" 
                       Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                        <ui:Button Grid.Column="1" Appearance="Secondary" Padding="6" 
                       Command="{Binding DataContext.GoToCpuSettingsCommand, RelativeSource={RelativeSource AncestorType=Page}}">
                            <ui:SymbolIcon Symbol="Settings24"/>
                        </ui:Button>
                    </Grid>

                    <!-- 内容区域：使用 StretchUniformGrid 显示核心 -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedVm.Cores}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <tools:StretchUniformGrid Columns="{Binding SelectedVm.Columns}" Rows="{Binding SelectedVm.Rows}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- 单个核心卡片 -->
                                <Grid Margin="4" MinHeight="60">
                                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                        <Grid>
                                            <!-- 背景网格 (可选) -->
                                            <!-- <Rectangle Fill="{StaticResource FineGridBrush}"/> -->

                                            <!-- 波形图 -->
                                            <Viewbox Stretch="Fill">
                                                <Grid Width="100" Height="100">
                                                    <Polygon Points="{Binding HistoryPoints}" Fill="#66117DBB"/>
                                                    <Polyline Points="{Binding HistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                                </Grid>
                                            </Viewbox>

                                            <!-- 核心ID -->
                                            <TextBlock Text="{Binding CoreId}" FontSize="10" Opacity="0.6" Margin="4,2" 
                                           HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>

                                            <!-- 实时数值 -->
                                            <TextBlock Text="{Binding Usage, StringFormat='{}{0:N0}%'}" 
                                           FontSize="14" FontWeight="SemiBold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>