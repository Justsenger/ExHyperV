<UserControl x:Class="ExHyperV.Views.Components.VmDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer Padding="24,24,24,24" VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- CPU 模块 -->
            <Border Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 标题栏 -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="处理器 (CPU)" FontSize="15" FontWeight="Medium" 
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>

                        <!-- 齿轮配置按钮：绑定到 ViewModel 的 GoToCpuSettingsCommand -->
                        <ui:Button Grid.Column="1" Appearance="Secondary" Padding="6" 
                                   ToolTip="配置处理器"
                                   Command="{Binding DataContext.GoToCpuSettingsCommand, RelativeSource={RelativeSource AncestorType=Page}}">
                            <ui:SymbolIcon Symbol="Settings24"/>
                        </ui:Button>
                    </Grid>

                    <!-- 内容 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 大图标：旋转 90 度 -->
                        <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" 
                                Background="{ui:ThemeResource ControlFillColorSecondaryBrush}"
                                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                            <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF58E;" RenderTransformOrigin="0.5,0.5">
                                <ui:FontIcon.RenderTransform>
                                    <RotateTransform Angle="90"/>
                                </ui:FontIcon.RenderTransform>
                            </ui:FontIcon>
                        </Border>

                        <!-- 数据 -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <!-- 数据绑定预留 -->
                            <TextBlock Text="8 虚拟核心 (vCPU)" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,6"/>

                            <Grid Height="4" VerticalAlignment="Center">
                                <ProgressBar Value="12" Maximum="100" 
                                             Background="{ui:ThemeResource ControlFillColorSecondaryBrush}" 
                                             Foreground="{ui:ThemeResource SystemFillColorSuccessBrush}"
                                             BorderThickness="0"/>
                            </Grid>
                        </StackPanel>

                        <!-- 利用率数值 -->
                        <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="12%" FontSize="20" FontWeight="SemiBold" 
                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" HorizontalAlignment="Right"/>
                            <TextBlock Text="利用率" FontSize="12" 
                                       Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- 更多卡片可以在此添加... -->

        </StackPanel>
    </ScrollViewer>
</UserControl>