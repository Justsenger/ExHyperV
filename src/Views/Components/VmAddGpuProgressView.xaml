<UserControl x:Class="ExHyperV.Views.Components.VmAddGpuProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:ExHyperV.ViewModels"
             xmlns:models="clr-namespace:ExHyperV.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:VirtualMachinesPageViewModel}">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="正在执行配置..." FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- 任务列表 -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding GpuTasks}" MaxWidth="600">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:TaskItem}">
                    <Border Margin="0,0,0,16" Padding="16" CornerRadius="8" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" 
                            BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 状态图标 -->
                            <ContentControl Grid.Column="0" VerticalAlignment="Top" Margin="0,2,16,0">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <ui:SymbolIcon Symbol="Circle24" Foreground="{ui:ThemeResource TextFillColorDisabledBrush}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Running">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <ui:ProgressRing IsIndeterminate="True" Width="20" Height="20"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Success">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <ui:SymbolIcon Symbol="CheckmarkCircle24" Foreground="{ui:ThemeResource SystemFillColorSuccessBrush}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <ui:SymbolIcon Symbol="DismissCircle24" Foreground="{ui:ThemeResource SystemFillColorCriticalBrush}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Medium"/>
                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 返回按钮 (仅演示用，实际等完成后才显示) -->
        <ui:Button Grid.Row="2" Content="取消/返回" HorizontalAlignment="Center" Margin="0,20,0,0"
                   Command="{Binding CancelAddGpuCommand}" Appearance="Secondary"/>
    </Grid>
</UserControl>