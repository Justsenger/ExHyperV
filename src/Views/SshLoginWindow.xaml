<ui:FluentWindow x:Class="ExHyperV.Views.SshLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExHyperV.Views"
        mc:Ignorable="d"
        Title="SSH 登录" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- 新增行，用于代理标题 -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="连接到 Linux 虚拟机" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Text="IPv4 地址:" Margin="0,5"/>
        <ui:TextBox x:Name="HostTextBox" Grid.Row="2" PlaceholderText="例如: 192.168.1.100"/>

        <TextBlock Grid.Row="3" Text="用户名:" Margin="0,10,0,5"/>
        <ui:TextBox x:Name="UsernameTextBox" Grid.Row="4" PlaceholderText="例如: root"/>

        <TextBlock Grid.Row="5" Text="口令:" Margin="0,10,0,5"/>
        <ui:PasswordBox x:Name="PasswordBox" Grid.Row="6" MaxLength="128"/>

        <!-- 新增: HTTP 代理设置 (可选) -->
        <TextBlock Grid.Row="7" Text="HTTP 代理 (可选)" FontWeight="SemiBold" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="8" Text="代理 IP 地址:" Margin="0,5"/>
        <ui:TextBox x:Name="ProxyHostTextBox" Grid.Row="9" PlaceholderText="例如: 192.168.1.200"/>

        <TextBlock Grid.Row="10" Text="代理端口:" Margin="0,10,0,5"/>
        <ui:TextBox x:Name="ProxyPortTextBox" Grid.Row="11" PlaceholderText="例如: 7890"/>

        <TextBlock x:Name="ErrorTextBlock" Grid.Row="12" TextWrapping="Wrap" Foreground="Red" VerticalAlignment="Center" Margin="0,10"/>

        <Grid Grid.Row="13">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ui:Button Grid.Column="0" Content="取消" Width="200"  Margin="5" Click="CancelButton_Click"/>
            <ui:Button Grid.Column="1" x:Name="ConfirmButton" Content="连接" Width="200" Margin="5" Appearance="Primary" Click="ConfirmButton_Click"/>
        </Grid>
    </Grid>
</ui:FluentWindow>