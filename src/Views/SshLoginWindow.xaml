<ui:FluentWindow x:Class="ExHyperV.Views.SshLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExHyperV.Views"
        xmlns:properties="clr-namespace:ExHyperV.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.Title_SshLogin}" Height="600" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="{x:Static properties:Resources.Title_SshLogin}" ForceShutdown="False"/>

        <Grid Grid.Row="1" Margin="25,0,25,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="{x:Static properties:Resources.Label_ConnectToLinuxVm}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <StackPanel Grid.Row="1">
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{x:Static properties:Resources.Label_HostIpAddress}" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="HostTextBox" PlaceholderText="{x:Static properties:Resources.Placeholder_IpAddressExample}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="{x:Static properties:Resources.Label_Port}" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="PortTextBox" Text="22" PlaceholderText="22"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="{x:Static properties:Resources.Label_Username}" Margin="0,0,0,5"/>
                <ui:TextBox x:Name="UsernameTextBox" PlaceholderText="{x:Static properties:Resources.Placeholder_UsernameExample}" Margin="0,0,0,15"/>

                <TextBlock Text="{x:Static properties:Resources.Label_Password}" Margin="0,0,0,5"/>
                <ui:PasswordBox x:Name="PasswordBox" MaxLength="128"/>
                <CheckBox x:Name="GraphicsCheckBox" 
                      Content="{x:Static properties:Resources.CheckBox_InstallGraphicsDrivers}" 
                      IsChecked="False" 
                      Margin="-10,10,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,25,0,0">
                <TextBlock Text="{x:Static properties:Resources.GroupBox_HttpProxyOptional}" FontWeight="Medium" Margin="0,0,0,5"/>
                <TextBlock Text="{x:Static properties:Resources.Info_UseProxyForGitHub}" 
                           FontSize="11" 
                           Foreground="Gray" 
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{x:Static properties:Resources.Label_ProxyIpAddress}" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="ProxyHostTextBox" PlaceholderText="{x:Static properties:Resources.Placeholder_IpAddressExample}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="{x:Static properties:Resources.Label_Port}" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="ProxyPortTextBox" PlaceholderText="7890"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <TextBlock x:Name="ErrorTextBlock" Grid.Row="3" TextWrapping="Wrap" Foreground="Red" 
                       VerticalAlignment="Bottom" Margin="0,15,0,15"/>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ui:Button Grid.Column="0" Content="{x:Static properties:Resources.Button_Cancel}" Margin="0,0,5,0" HorizontalAlignment="Stretch" Click="CancelButton_Click" IsCancel="True"/>
                <ui:Button Grid.Column="1" x:Name="ConfirmButton" Content="{x:Static properties:Resources.Button_Connect}" Margin="5,0,0,0" Appearance="Primary" HorizontalAlignment="Stretch" Click="ConfirmButton_Click" IsDefault="True"/>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>