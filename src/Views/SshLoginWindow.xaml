<ui:FluentWindow x:Class="ExHyperV.Views.SshLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExHyperV.Views"
        mc:Ignorable="d"
        Title="SSH 登录" Height="560" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="SSH 登录" ForceShutdown="False"/>

        <Grid Grid.Row="1" Margin="25,0,25,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="连接到 Linux 虚拟机" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1">
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="主机 IP 地址:" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="HostTextBox" PlaceholderText="例如: 192.168.1.100"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="端口:" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="PortTextBox" Text="22" PlaceholderText="22"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="用户名:" Margin="0,0,0,5"/>
                <ui:TextBox x:Name="UsernameTextBox" PlaceholderText="例如: root" Margin="0,0,0,15"/>

                <TextBlock Text="口令:" Margin="0,0,0,5"/>
                <ui:PasswordBox x:Name="PasswordBox" MaxLength="128"/>
                <CheckBox x:Name="GraphicsCheckBox" 
                      Content="安装 OpenGL/Vulkan 图形驱动" 
                      IsChecked="False" 
                      Margin="0,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,25,0,0">
                <TextBlock Text="HTTP 代理 (可选)" FontWeight="Medium" Margin="0,0,0,5"/>
                <TextBlock Text="如果不能直连 GitHub.com，请使用稳定可靠的代理。" 
                           FontSize="11" 
                           Foreground="Gray" 
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="代理 IP 地址:" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="ProxyHostTextBox" PlaceholderText="例如: 192.168.1.200"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="端口:" Margin="0,0,0,5"/>
                        <ui:TextBox x:Name="ProxyPortTextBox" PlaceholderText="7890"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <TextBlock x:Name="ErrorTextBlock" Grid.Row="3" TextWrapping="Wrap" Foreground="Red" 
                       VerticalAlignment="Bottom" Margin="0,15,0,15"/>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ui:Button Grid.Column="0" Content="取消" Margin="0,0,5,0" HorizontalAlignment="Stretch" Click="CancelButton_Click" IsCancel="True"/>
                <ui:Button Grid.Column="1" x:Name="ConfirmButton" Content="连接" Margin="5,0,0,0" Appearance="Primary" HorizontalAlignment="Stretch" Click="ConfirmButton_Click" IsDefault="True"/>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>