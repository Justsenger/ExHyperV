<ui:FluentWindow x:Class="ExHyperV.Views.ExecutionProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExHyperV.Views"
        mc:Ignorable="d"
        Title="Linux GPU 部署进度" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 窗口主标题 -->
        <TextBlock Grid.Row="0" Text="正在自动化部署 Linux GPU 环境" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- 状态文本，用于显示当前正在进行的大步骤 -->
        <TextBlock Grid.Row="1" x:Name="StatusTextBlock" Text="准备中..." FontSize="14" Margin="0,0,0,10"/>

        <!-- 日志输出区域 -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox" 
                         IsReadOnly="True" 
                         Background="Transparent"
                         BorderThickness="0"
                         FontFamily="Consolas, Cascadia Mono, Courier New"
                         TextWrapping="Wrap"
                         Padding="10"/>
            </ScrollViewer>
        </Border>

        <!-- 底部按钮区域 -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <ui:Button x:Name="CloseButton" 
                       Content="关闭" 
                       HorizontalAlignment="Right" 
                       IsEnabled="False" 
                       Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</ui:FluentWindow>