<ui:FluentWindow x:Class="ExHyperV.Views.ChooseDiskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:properties="clr-namespace:ExHyperV.Properties"
        Title="ExHyperV" Height="550" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="选择物理磁盘" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <ui:TitleBar.Icon>
                <ui:ImageIcon>
                    <ui:ImageIcon.Source>
                        <BitmapImage UriSource="pack://application:,,,/Assets/Icon.png" />
                    </ui:ImageIcon.Source>
                </ui:ImageIcon>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ProgressBar x:Name="progress" Grid.Row="1" IsIndeterminate="False" Visibility="Collapsed"/>

        <Grid Grid.Row="2" Margin="7">
            <ui:ListView x:Name="DiskListView" ItemsSource="{Binding Items}" SelectionChanged="ListView_SelectionChanged">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="15,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ui:FontIcon Glyph="&#xEDA2;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="40" VerticalAlignment="Center" Grid.Column="0"/>

                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FriendlyName}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <ui:Badge Content="{Binding Number, StringFormat='磁盘 {0}'}" Appearance="Secondary"/>
                                    <TextBlock Text="{Binding SizeDisplay}" Margin="10,0,0,0" VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                                <TextBlock Text="{Binding StatusDisplay}" FontSize="11" Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOffline}" Value="True">
                                                    <Setter Property="Foreground" Value="#FF70AD47"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsOffline}" Value="False">
                                                    <Setter Property="Foreground" Value="#FFFFC000"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="AutoOfflineCheckBox" 
                      Content="确认后自动脱机该磁盘" 
                      IsChecked="True"
                      VerticalAlignment="Center" 
                      Margin="10,0,0,0"
                      Grid.Column="0"/>

            <ui:Button Content="{x:Static properties:Resources.cancel}" Width="100" Margin="10,0" Click="CancelButton_Click" Grid.Column="1"/>
            <ui:Button x:Name="ConfirmButton" Appearance="Primary" Content="{x:Static properties:Resources.sure}" Width="100" Click="ConfirmButton_Click" Grid.Column="2" IsEnabled="False"/>
        </Grid>
    </Grid>
</ui:FluentWindow>