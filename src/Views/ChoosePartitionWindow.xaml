<ui:FluentWindow x:Class="ExHyperV.Views.ChoosePartitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExHyperV"
        mc:Ignorable="d"
        xmlns:properties="clr-namespace:ExHyperV.Properties"
        Title="ExHyperV" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="驱动注入" Grid.RowSpan="1" VerticalAlignment="Center">
            <ui:TitleBar.Icon>
                <ui:ImageIcon>
                    <ui:ImageIcon.Source>
                        <BitmapImage UriSource="pack://application:,,,/Assets/Icon.png" />
                    </ui:ImageIcon.Source>
                </ui:ImageIcon>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1" Margin="7">
            <ui:ListView x:Name="PartitionListView" SelectionChanged="ListView_SelectionChanged">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="15,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ui:Image 
                                Grid.Column="0" 
                                Source="{Binding IconPath}" 
                                Height="32" 
                                Width="32" 
                                Margin="0,0,15,0"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock 
                                Grid.Column="1" 
                                Text="{Binding DisplayName}" 
                                FontSize="14" 
                                VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ui:Button 
                Grid.Column="0" 
                Content="{x:Static properties:Resources.cancel}" 
                Width="200" Margin="20, 0, 40, 0"  
                Click="CancelButton_Click"/>

            <ui:Button 
                Grid.Column="1" 
                x:Name="ConfirmButton" 
                Appearance="Primary" 
                Content="{x:Static properties:Resources.sure}" 
                Width="200"
                Click="ConfirmButton_Click" 
                IsEnabled="False"/>
        </Grid>
    </Grid>
</ui:FluentWindow>