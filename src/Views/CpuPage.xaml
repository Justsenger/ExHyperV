<Page x:Class="ExHyperV.Views.Pages.CpuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CpuPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE1CF;" FontSize="64" Margin="0,0,0,20" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>

            <TextBlock Text="功能开发中" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center"
                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>

            <TextBlock Text="此功能尚未完善，敬请期待。" 
                       FontSize="14" 
                       Margin="0,10,0,0" 
                       HorizontalAlignment="Center"
                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>