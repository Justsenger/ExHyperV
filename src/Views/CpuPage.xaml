<Page x:Class="ExHyperV.Views.Pages.CpuPage"
      x:Name="CpuRootPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:ExHyperV.ViewModels"
      xmlns:converters="clr-namespace:ExHyperV.Converters"
      xmlns:tools="clr-namespace:ExHyperV.Tools" 
      Title="CpuPage"
      d:DataContext="{d:DesignInstance vm:CpuPageViewModel, IsDesignTimeCreatable=True}"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:CpuPageViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:VmNameToIconConverter x:Key="VmNameToIconConverter" />

        <DrawingBrush x:Key="FineGridBrush" Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
            <DrawingBrush.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,10,10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#15888888" Thickness="1"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Page.Resources>

    <Grid>
        <Grid IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="10,5,10,0" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:FontIcon Glyph="&#xF58E;" FontSize="20" FontFamily="{DynamicResource SegoeFluentIcons}" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" RenderTransformOrigin="0.5,0.5">
                            <ui:FontIcon.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ui:FontIcon.RenderTransform>
                        </ui:FontIcon>
                        <TextBlock Text="中央处理器" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"
                                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Text="更新速度：" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                        <ComboBox SelectedIndex="{Binding SelectedSpeedIndex}" Width="120">
                            <ComboBoxItem Content="快 (1s)"/>
                            <ComboBoxItem Content="慢 (2s)"/>
                            <ComboBoxItem Content="暂停"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="10,5,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="220" MaxWidth="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                    <ui:ListView ItemsSource="{Binding VmList}" 
                                 SelectedItem="{Binding SelectedVm, Mode=TwoWay}"
                                 MaxHeight="550"
                                 VerticalAlignment="Top">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="{Binding Name, Converter={StaticResource VmNameToIconConverter}}" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding AverageUsage, StringFormat='{}{0:N1}%'}"/>
                                                <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                        <Setter Property="Text" Value="已关闭"/>
                                                        <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorDisabledBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

                <ContentControl Grid.Column="2" Content="{Binding SelectedVm}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Padding="15">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <ItemsControl Grid.Row="0" ItemsSource="{Binding Cores}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <tools:StretchUniformGrid Columns="{Binding Columns}" Rows="{Binding Rows}" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="2">
                                                                <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                                                    <Grid>
                                                                        <Rectangle Fill="{StaticResource FineGridBrush}"/>
                                                                        <Viewbox Stretch="Fill" x:Name="WaveGraph">
                                                                            <Grid Width="100" Height="100">
                                                                                <Polygon Points="{Binding HistoryPoints}" Fill="#66117DBB"/>
                                                                                <Polyline Points="{Binding HistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                                                            </Grid>
                                                                        </Viewbox>

                                                                        <StackPanel Orientation="Horizontal" Margin="5,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                                                            <TextBlock Text="{Binding CoreId}" FontSize="10" Opacity="0.6" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                                                                            <TextBlock FontSize="10" Margin="3,0,0,0" VerticalAlignment="Center" FontWeight="Bold">
                                                                                <TextBlock.Style>
                                                                                    <Style TargetType="TextBlock">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding CoreType}" Value="Performance">
                                                                                                <Setter Property="Text" Value="⚡"/>
                                                                                                <Setter Property="Foreground" Value="#FFFAA146"/>
                                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                            </DataTrigger>
                                                                                            <DataTrigger Binding="{Binding CoreType}" Value="Efficient">
                                                                                                <Setter Property="Text" Value="🍃"/>
                                                                                                <Setter Property="Foreground" Value="#FF107C10"/>
                                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </TextBlock.Style>
                                                                            </TextBlock>
                                                                        </StackPanel>

                                                                        <TextBlock x:Name="UsageText"
                                                                                   Text="{Binding Usage, StringFormat='{}{0:N1}%'}" 
                                                                                   FontSize="16" FontWeight="SemiBold" 
                                                                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>

                                                                        <TextBlock Text="OFF" FontSize="14" FontWeight="Bold" Opacity="0.1" 
                                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                                                   x:Name="OffText" Visibility="Collapsed"/>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>

                                                            <DataTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsRunning, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                                                                    <Setter TargetName="WaveGraph" Property="Visibility" Value="Hidden"/>
                                                                    <Setter TargetName="UsageText" Property="Visibility" Value="Hidden"/>
                                                                    <Setter TargetName="OffText" Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </DataTemplate.Triggers>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <Grid Grid.Row="1" Margin="0,15,0,0">

                                                    <!-- ======================================================= -->
                                                    <!--             1. 虚拟机控制面板 (非Host时显示)              -->
                                                    <!-- ======================================================= -->
                                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <!-- 规则: 当选择的是 "Host" 时，隐藏此面板 -->
                                                                    <DataTrigger Binding="{Binding Name}" Value="Host">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>

                                                        <!-- CPU绑定按钮 -->
                                                        <ui:Button Command="{Binding DataContext.OpenVmCpuAffinityCommand, ElementName=CpuRootPage}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <ui:FontIcon Glyph="&#xF58E;" Margin="0,0,8,0"/>
                                                                <TextBlock Text="CPU 绑定"/>
                                                            </StackPanel>
                                                        </ui:Button>
                                                    </StackPanel>

                                                    <!-- ======================================================= -->
                                                    <!--               2. 宿主机控制面板 (仅Host时显示)              -->
                                                    <!-- ======================================================= -->
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <!-- 规则: 当选择的是 "Host" 时，显示此面板 -->
                                                                    <DataTrigger Binding="{Binding Name}" Value="Host">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>

                                                        <!-- 调度器设置 -->
                                                        <TextBlock Text="调度器：" 
                   VerticalAlignment="Center" 
                   Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                                                        <ComboBox Margin="10,0,0,0" Width="150"
                  SelectedIndex="{Binding DataContext.SelectedSchedulerIndex, ElementName=CpuRootPage, Mode=TwoWay}">
                                                            <ComboBoxItem Content="经典 (Classic)"/>
                                                            <ComboBoxItem Content="核心 (Core)"/>
                                                            <ComboBoxItem Content="根 (Root)"/>
                                                        </ComboBox>
                                                    </StackPanel>

                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                                                    <TextBlock Text="等待数据中..." HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                </Border>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Grid>

        <ProgressBar Panel.ZIndex="1" VerticalAlignment="Top" Height="4" IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Page>