<Page x:Class="ExHyperV.Views.Pages.StoragePage"
      x:Name="StorageRootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:ExHyperV.ViewModels"
      xmlns:converters="clr-namespace:ExHyperV.Converters"
      xmlns:properties="clr-namespace:ExHyperV.Properties"
      xmlns:tools="clr-namespace:ExHyperV.Tools"
      Title="StoragePage"
      d:DataContext="{d:DesignInstance vm:StoragePageViewModel, IsDesignTimeCreatable=True}"
      mc:Ignorable="d"
      tools:ScrollHelper.LockParentScroll="True">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:VmNameToIconConverter x:Key="VmNameToIconConverter" />
        <converters:EqualityConverter x:Key="EqualityConverter" />

        <DataTemplate x:Key="VmLoadingTemplate">
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                <TextBlock Text="{x:Static properties:Resources.DataLoading}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="VmDetailTemplate">
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="设备列表" FontSize="16" FontWeight="SemiBold" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <ui:Button Grid.Column="1" Content="添加存储" Icon="Add24" Appearance="Primary" VerticalAlignment="Center" 
                                       Command="{Binding DataContext.AddStorageCommand, ElementName=StorageRootPage}"/>
                        </Grid>

                        <StackPanel Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding DataContext.AllDrives, ElementName=StorageRootPage}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ui:CardExpander Margin="0,0,0,4" IsExpanded="True" ContentPadding="0" Padding="10,8,10,8">
                                            <ui:CardExpander.Header>
                                                <Grid Height="30">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ui:FontIcon Grid.Column="0" Glyph="{Binding Icon}" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="18" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,-2,0,0">
                                                        <TextBlock Text="{Binding DisplayName}" FontSize="16" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                        <TextBlock FontSize="12" Margin="10,2,0,0" Opacity="0.5" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                    <Setter Property="Text" Value="{Binding SizeDisplay}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding PathOrDiskNumber}" Value="">
                                                                            <Setter Property="Text" Value="空"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding PathOrDiskNumber}" Value="{x:Null}">
                                                                            <Setter Property="Text" Value="空"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <ui:Button Content="修改" Appearance="Primary" Margin="0,0,8,0" Padding="10,4" VerticalAlignment="Center" FontSize="12"
                                                           Command="{Binding DataContext.ModifyDriveCommand, ElementName=StorageRootPage}" 
                                                           CommandParameter="{Binding}">
                                                            <ui:Button.Style>
                                                                <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding DiskType}" Value="Physical">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ui:Button.Style>
                                                        </ui:Button>
                                                        <ui:Button Content="移除" Padding="6" VerticalAlignment="Center"
                                                                   Command="{Binding DataContext.RemoveDriveCommand, ElementName=StorageRootPage}" CommandParameter="{Binding}"
                                                                   ToolTip="移除此设备"/>
                                                    </StackPanel>
                                                </Grid>
                                            </ui:CardExpander.Header>

                                            <Border Padding="24,16,24,20" BorderThickness="0,1,0,0" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" Background="#05FFFFFF">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="类型" Margin="0,0,0,8" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DiskType}" Value="Virtual">
                                                                        <Setter Property="Text" Value="虚拟文件"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DiskType}" Value="Physical">
                                                                        <Setter Property="Text" Value="物理设备"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DiskType}" Value="Empty">
                                                                        <Setter Property="Text" Value="空设备"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="插槽" Margin="0,0,0,8" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding ControllerType}" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium"/>
                                                        <TextBlock Text=" 控制器 " Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium"/>
                                                        <TextBlock Text="{Binding ControllerNumber}" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium"/>
                                                        <TextBlock Text=" - 位置 " Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium"/>
                                                        <TextBlock Text="{Binding ControllerLocation}" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="路径" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Top"/>
                                                    <TextBlock Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" FontWeight="Medium" LineHeight="20">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                <Setter Property="Text" Value="{Binding PathOrDiskNumber}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding PathOrDiskNumber}" Value="">
                                                                        <Setter Property="Text" Value="空"/>
                                                                        <Setter Property="Opacity" Value="0.5"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PathOrDiskNumber}" Value="{x:Null}">
                                                                        <Setter Property="Text" Value="空"/>
                                                                        <Setter Property="Opacity" Value="0.5"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </ui:CardExpander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="此虚拟机没有任何存储设备" HorizontalAlignment="Center" Margin="0,40,0,0" Opacity="0.4" FontSize="14" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.AllDrives.Count, ElementName=StorageRootPage}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="10,5,10,0" BorderThickness="1" CornerRadius="4" Padding="10" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:FontIcon Glyph="&#xEDA2;" FontSize="20" FontFamily="{DynamicResource SegoeFluentIcons}" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="存储设置" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="10,5,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="220" MaxWidth="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                    <ui:ListView ItemsSource="{Binding VmList}" 
                                 SelectedItem="{Binding SelectedVm, Mode=TwoWay}" 
                                 VerticalAlignment="Stretch"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.CanContentScroll="True"
                                 VirtualizingStackPanel.IsVirtualizing="True"
                                 VirtualizingStackPanel.VirtualizationMode="Recycling">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,6,12,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="{Binding Name, Converter={StaticResource VmNameToIconConverter}}" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Setter Property="Text" Value="运行中"/>
                                                <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                        <Setter Property="Text" Value="{x:Static properties:Resources.Off}"/>
                                                        <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorDisabledBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

                <ContentControl Grid.Column="2" Content="{Binding SelectedVm}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="ContentTemplate" Value="{StaticResource VmDetailTemplate}"/>
                            <Style.Triggers>
                                <Trigger Property="Content" Value="{x:Null}">
                                    <Setter Property="ContentTemplate" Value="{StaticResource VmLoadingTemplate}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Grid>

        <ProgressBar Panel.ZIndex="1" VerticalAlignment="Top" Height="4" IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Page>