<Page
    x:Class="ExHyperV.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:extensions="https://github.com/XAMLMarkupExtensions/WPFLocalizationExtension"
    Title="MainPage"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">


    <Grid Margin="15" VerticalAlignment="Top">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <ui:Image CornerRadius="15" Stretch="Uniform" Source="pack://application:,,,/Assets/bar.png" />
        </Grid>


        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30">
            <ui:TextBlock Text="ExHyperV" Margin="0,15,0,0" FontSize="42" Foreground="White" />
            <ui:TextBlock Text="{extensions:Loc exhyperv}" Margin="50,5,0,0" FontSize="18" Foreground="White" />

        </StackPanel>


        <ui:CardExpander Grid.Row="1" Margin="0,10,0,0" ContentPadding="6" IsExpanded="True">
            <ui:CardExpander.Icon>
                <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE770;" />
            </ui:CardExpander.Icon>
            <ui:CardExpander.Header>
                <Grid>
                    <ui:TextBlock Text="{extensions:Loc systeminfo}" FontSize="16" VerticalAlignment="Center" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel Margin="50,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                    </Grid.RowDefinitions>

                    <!-- 第一列内容 -->
                    <ui:TextBlock Text="{extensions:Loc version}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10"
                                  Grid.Row="0" />
                    <ui:TextBlock Text="{extensions:Loc arch}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10"
                                  Grid.Row="1" />
                    <ui:TextBlock Text="{extensions:Loc model}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10"
                                  Grid.Row="2" />
                    <ui:TextBlock Text="{extensions:Loc Memorycapacity}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="3" />

                    <!-- 第二列内容 -->
                    <ui:TextBlock x:Name="Caption" FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="0" />
                    <ui:TextBlock x:Name="OSArchitecture" FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="1" />
                    <ui:TextBlock x:Name="CPUmodel" FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="2" />
                    <ui:TextBlock x:Name="MemCap" FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="3" />
                </Grid>
            </StackPanel>

        </ui:CardExpander>

        <ui:CardExpander Grid.Row="2" Margin="0,10,0,0" ContentPadding="6" IsExpanded="True">
            <ui:CardExpander.Icon>
                <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE946;" />
            </ui:CardExpander.Icon>

            <ui:CardExpander.Header>
                <Grid>
                    <ui:TextBlock Text="{extensions:Loc soft}" FontSize="16" VerticalAlignment="Center" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel Margin="50,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                    </Grid.RowDefinitions>

                    <!-- 第一列内容 -->
                    <ui:TextBlock Text="{extensions:Loc appversion}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10"
                                  Grid.Row="0" />
                    <ui:TextBlock Text="{extensions:Loc author}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10"
                                  Grid.Row="1" />
                    <ui:TextBlock Text="{extensions:Loc buildtime}" FontSize="16" VerticalAlignment="Center"
                                  Margin="0,0,10,10"
                                  Grid.Row="2" />

                    <!-- 第二列内容 -->
                    <ui:TextBlock FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="0"
                                  Text="{extensions:Loc AppVersionValue}" />
                    <ui:TextBlock FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="1"
                                  Text="{extensions:Loc AppAuthor}" />
                    <ui:TextBlock x:Name="Date" FontSize="16" Grid.Column="1" VerticalAlignment="Center"
                                  Margin="0,0,10,10" Grid.Row="2" />
                </Grid>
            </StackPanel>

        </ui:CardExpander>

    </Grid>


</Page>