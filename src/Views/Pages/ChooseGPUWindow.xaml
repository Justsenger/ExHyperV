<ui:FluentWindow x:Class="ExHyperV.Views.Pages.ChooseGpuWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 xmlns:markup="clr-namespace:ExHyperV.Markup"
                 xmlns:models="clr-namespace:ExHyperV.Models"
                 Title="ExHyperV" Height="550" Width="500"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>

        <!-- Layout planning -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title bar -->
        <ui:TitleBar
            Title="{markup:Localized GPUselect}" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <ui:TitleBar.Icon>
                <ui:ImageIcon>
                    <ui:ImageIcon.Source>
                        <BitmapImage UriSource="pack://application:,,,/Assets/app.png" />
                    </ui:ImageIcon.Source>
                </ui:ImageIcon>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ProgressBar x:Name="Progress" Grid.Row="1" IsIndeterminate="False" />

        <Grid Grid.Row="2" Margin="7">
            <ui:ListView x:Name="GpuListView"
                         SelectionChanged="ListView_SelectionChanged">
                <ui:ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Gpu}">
                        <Grid Margin="15,15,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ui:Image Source="{Binding IconPath}" Height="64" Width="64" VerticalAlignment="Top"
                                      Grid.RowSpan="2" />
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="10,5,0,0"
                                       Grid.Row="0" Grid.Column="1" />
                            <TextBlock Text="{Binding InstanceId}" VerticalAlignment="Center" Margin="10,5,0,0"
                                       Grid.Row="1"
                                       Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>

        </Grid>


        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Content="{markup:Localized cancel}" Width="200" Margin="20,0,40,0"
                       Click="CancelButton_Click" />
            <ui:Button x:Name="ConfirmButton" Appearance="Primary" Content="{markup:Localized sure}"
                       Width="200" Click="ConfirmButton_Click" Grid.Column="1" IsEnabled="False" />
        </Grid>

        <ContentPresenter Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="ContentPresenterForDialogs" />

    </Grid>
</ui:FluentWindow>