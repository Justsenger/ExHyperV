<Page
    x:Class="ExHyperV.Views.Pages.DDAPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExHyperV.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainPage"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid Margin="10" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="0" x:Name="progressRing" IsIndeterminate="True"/>

        <ui:InfoBar Grid.Row="1" Margin="0,5,0,0"
            Title="注意" 
            Message="随意分配设备可能导致系统不稳定，请谨慎操作！" 
            IsOpen="True"
            Severity="Warning"/>
        <Grid Grid.Row="2" Margin="0,5,0,0">
            <ui:Card BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- 系统信息文本占据左侧空间 -->
                        <ColumnDefinition Width="Auto" />
                        <!-- 刷新按钮自适应宽度 -->
                    </Grid.ColumnDefinitions>

                    <!-- 硬件信息内容 -->
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE964;"/>
                        <TextBlock Grid.Column="1" Text="  可分配设备" FontSize="16" VerticalAlignment="Center"/>
                        <ui:Button Grid.Column="2" Content="刷新" Margin="0,0,10,0" Click="DDArefresh"></ui:Button>
                    </Grid>
                    
                </Grid>
            </ui:Card>

        </Grid>

        <Grid x:Name="ParentPanel"  Grid.Row="3"></Grid>

    </Grid>



</Page>
