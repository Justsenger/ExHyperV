<Page
    x:Class="ExHyperV.Views.Pages.GPUPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExHyperV.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="GPUPage"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="0" x:Name="progressbar" IsIndeterminate="True"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ui:Card VerticalAlignment="Top" Padding="10" Margin="10,10,10,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0">
                    <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF211;"/>
                    <TextBlock Text="  已安装显卡" FontSize="16"/>
                </StackPanel>
            </ui:Card>
            <Grid x:Name="main" Grid.Row="1"></Grid>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ui:Card VerticalAlignment="Top" Padding="10" Grid.Column="0" Margin="10,10,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF168;"/>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="  虚拟机列表" FontSize="16"/>
                    <ui:Button Grid.Column="2" Content="刷新" Margin="0,0,10,0" Click="vmrefresh"></ui:Button>

                </Grid>
            </ui:Card>

            <Grid x:Name="vms" Grid.Row="1"></Grid>
            
        </Grid>

        
    </Grid>




</Page>
