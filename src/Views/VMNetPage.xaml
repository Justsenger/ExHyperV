<Page
    x:Class="ExHyperV.Views.Pages.VMNetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:properties="clr-namespace:ExHyperV.Properties"
    xmlns:viewModels="clr-namespace:ExHyperV.ViewModels"
    xmlns:converters="clr-namespace:ExHyperV.Converters"
    xmlns:models="clr-namespace:ExHyperV.Models"
    xmlns:tools="clr-namespace:ExHyperV.Tools"
    Title="VMNetPage"
    d:DataContext="{d:DesignInstance Type=viewModels:VMNetViewModel, IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBooleanConverter x:Key="InvertBool" />
        <converters:EqualityConverter x:Key="Equality" />
    </Page.Resources>

    <Grid>
        <Grid Margin="10" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Error message card, no changes -->
            <ui:Card Grid.Row="0" Margin="0,5,0,5" BorderBrush="DarkRed" BorderThickness="1" Background="#19FF0000">
                <ui:Card.Style>
                    <Style TargetType="ui:Card">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorMessage, TargetNullValue=''}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ErrorMessage, TargetNullValue={x:Null}}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Card.Style>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="DarkRed" TextWrapping="Wrap" />
            </ui:Card>

            <!-- Header card with buttons, no changes -->
            <Grid Grid.Row="1" Margin="0,5,0,0">
                <ui:Card BorderThickness="1" Padding="10">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" FontSize="24" Glyph="&#xE774;"/>
                            <TextBlock Text="{x:Static properties:Resources.VirtualSwitchList}" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <ui:Button Content="{x:Static properties:Resources.Add}" Appearance="Primary" Command="{Binding AddNewSwitchCommand}" />
                            <ui:Button Margin="8,0,0,0" Content="{x:Static properties:Resources.refresh}" Command="{Binding LoadNetworkInfoCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBool}}" />
                        </StackPanel>
                    </Grid>
                </ui:Card>
            </Grid>

            <ItemsControl Grid.Row="2" ItemsSource="{Binding Switches}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SwitchViewModel}">
                        <ui:CardExpander Margin="20,5,0,0" Padding="16,12,12,12" IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                            <ui:CardExpander.Icon>
                                <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" FontSize="24" Glyph="{Binding IconGlyph}" />
                            </ui:CardExpander.Icon>
                            <ui:CardExpander.Header>
                                <Grid>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SwitchName}" FontSize="16" FontWeight="SemiBold" Margin="0" />
                                    </StackPanel>
                                    <ui:Button HorizontalAlignment="Right"
                                               Content="{x:Static properties:Resources.uninstall}"
                                               Margin="0,0,8,0"
                                               ToolTip="{x:Static properties:Resources.Uninstallswitch}"
                                               Visibility="{Binding IsDefaultSwitch, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                                               Command="{Binding DataContext.DeleteSwitchCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"
                                               />
                                </Grid>
                            </ui:CardExpander.Header>

                            <StackPanel Margin="50,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="125" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Rows 0-2 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static properties:Resources.NetMode}" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,8"/>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8" IsEnabled="{Binding IsLockedForInteraction, Converter={StaticResource InvertBool}}">
                                        <RadioButton Content="{x:Static properties:Resources.External}" Padding="8,6,8,4" GroupName="{Binding SwitchId}" IsChecked="{Binding SelectedNetworkMode, Converter={StaticResource Equality}, ConverterParameter=External, Mode=OneWay}" Command="{Binding SetNetworkModeCommand}" CommandParameter="External" IsEnabled="{Binding IsDefaultSwitch, Converter={StaticResource InvertBool}}"/>
                                        <RadioButton Content="{x:Static properties:Resources.Internal}" Padding="8,6,8,4" GroupName="{Binding SwitchId}" IsChecked="{Binding SelectedNetworkMode, Converter={StaticResource Equality}, ConverterParameter=Internal, Mode=OneWay}" Command="{Binding SetNetworkModeCommand}" CommandParameter="Internal" IsEnabled="{Binding IsDefaultSwitch, Converter={StaticResource InvertBool}}"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static properties:Resources.Internet}" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,8" Visibility="{Binding IsUpstreamSelectionEnabled, Converter={StaticResource BoolToVis}}"/>
                                    <ui:DropDownButton Grid.Row="1" Grid.Column="1" Content="{Binding DropDownButtonContent}" IsEnabled="{Binding IsUpstreamSelectionEnabled}" Margin="0,0,0,8" Visibility="{Binding IsUpstreamSelectionEnabled, Converter={StaticResource BoolToVis}}">
                                        <ui:DropDownButton.Flyout>
                                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}" ItemsSource="{Binding MenuItems}">
                                                <ContextMenu.ItemContainerStyle>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Header" Value="{Binding}"/>
                                                        <Setter Property="Command" Value="{Binding PlacementTarget.DataContext.SelectUpstreamAdapterCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                        <Setter Property="CommandParameter" Value="{Binding}"/>
                                                    </Style>
                                                </ContextMenu.ItemContainerStyle>
                                            </ContextMenu>
                                        </ui:DropDownButton.Flyout>
                                    </ui:DropDownButton>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static properties:Resources.Hostconnected}" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,8"/>
                                    <ui:ToggleSwitch Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" IsChecked="{Binding IsHostConnectionAllowed, Mode=TwoWay}" IsEnabled="{Binding IsHostConnectionToggleEnabled}" Margin="0,0,0,8"/>

                                    <!-- Subnet Row (Row 3) -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="子网设置" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,8" Visibility="{Binding AreAdvancedFeaturesVisible, Converter={StaticResource BoolToVis}}"/>
                                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8" Visibility="{Binding AreAdvancedFeaturesVisible, Converter={StaticResource BoolToVis}}">
                                        <ui:TextBox x:Name="Octet1TextBox" Text="{Binding SubnetOctet1, UpdateSourceTrigger=PropertyChanged}" Width="45" Padding="5,2" TextAlignment="Center" ClearButtonEnabled="False" PreviewTextInput="SubnetTextBox_PreviewTextInput" PreviewKeyDown="SubnetTextBox_PreviewKeyDown" />
                                        <TextBlock Text="." VerticalAlignment="Center" Margin="2,0"/>
                                        <ui:TextBox x:Name="Octet2TextBox" Text="{Binding SubnetOctet2, UpdateSourceTrigger=PropertyChanged}" Width="45" Padding="5,2" TextAlignment="Center" ClearButtonEnabled="False" PreviewTextInput="SubnetTextBox_PreviewTextInput" PreviewKeyDown="SubnetTextBox_PreviewKeyDown" />
                                        <TextBlock Text="." VerticalAlignment="Center" Margin="2,0"/>
                                        <ui:TextBox x:Name="Octet3TextBox" Text="{Binding SubnetOctet3, UpdateSourceTrigger=PropertyChanged}" Width="45" Padding="5,2" TextAlignment="Center" ClearButtonEnabled="False" PreviewTextInput="SubnetTextBox_PreviewTextInput" PreviewKeyDown="SubnetTextBox_PreviewKeyDown" />
                                        <TextBlock Text="." VerticalAlignment="Center" Margin="2,0"/>
                                        <ui:TextBox x:Name="Octet4TextBox" Text="{Binding SubnetOctet4, UpdateSourceTrigger=PropertyChanged}" Width="45" Padding="5,2" TextAlignment="Center" ClearButtonEnabled="False" PreviewTextInput="SubnetTextBox_PreviewTextInput" PreviewKeyDown="SubnetTextBox_PreviewKeyDown" />
                                        <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                                        <ui:TextBox x:Name="CidrTextBox" Text="{Binding SubnetCidr, UpdateSourceTrigger=PropertyChanged}" Width="35" Padding="5,2" TextAlignment="Center" ClearButtonEnabled="False" PreviewTextInput="SubnetTextBox_PreviewTextInput" PreviewKeyDown="SubnetTextBox_PreviewKeyDown" />
                                        <TextBlock Text="{Binding SubnetFeedbackText}" Foreground="{Binding SubnetFeedbackBrush}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Rows 4-5 -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="NAT" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,8" Visibility="{Binding AreAdvancedFeaturesVisible, Converter={StaticResource BoolToVis}}"/>
                                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8" Visibility="{Binding AreAdvancedFeaturesVisible, Converter={StaticResource BoolToVis}}">
                                        <ui:ToggleSwitch IsChecked="{Binding IsNatEnabled, Mode=TwoWay}"/>
                                        <ui:Button Margin="8,0,0,0" Appearance="Transparent" Command="{Binding ConfigureNatCommand}" Padding="4">
                                            <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE713;" />
                                        </ui:Button>
                                    </StackPanel>
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="DHCP" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,0" Visibility="{Binding AreAdvancedFeaturesVisible, Converter={StaticResource BoolToVis}}"/>
                                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0" Visibility="{Binding AreAdvancedFeaturesVisible, Converter={StaticResource BoolToVis}}">
                                        <ui:ToggleSwitch IsChecked="{Binding IsDhcpEnabled, Mode=TwoWay}"/>
                                        <ui:Button Margin="8,0,0,0" Appearance="Transparent" Command="{Binding ConfigureDhcpCommand}" Padding="4">
                                            <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE713;" />
                                        </ui:Button>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,12,0,10">
                                    <TextBlock Text="{x:Static properties:Resources.NetDraw}" FontSize="16" Margin="0,0,0,10" />
                                    <tools:TopologyCanvas ItemsSource="{Binding ConnectedClients}" SwitchName="{Binding SwitchName}" NetworkMode="{Binding SelectedNetworkMode}" />
                                </StackPanel>
                            </StackPanel>
                        </ui:CardExpander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!-- Busy indicator, no changes -->
        <Grid Background="#7F000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <ui:ProgressRing IsIndeterminate="True" Width="60" Height="60" />
        </Grid>
    </Grid>
</Page>