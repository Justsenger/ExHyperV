<Page
    x:Class="ExHyperV.Views.Pages.VMNetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:properties="clr-namespace:ExHyperV.Properties"
    xmlns:viewModels="clr-namespace:ExHyperV.ViewModels"
    xmlns:converters="clr-namespace:ExHyperV.Converters"
    xmlns:models="clr-namespace:ExHyperV.Models"
    xmlns:tools="clr-namespace:ExHyperV.Tools"
    Title="VMNetPage"
    d:DataContext="{d:DesignInstance Type=viewModels:VMNetViewModel, IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBooleanConverter x:Key="InvertBool" />
        <converters:EqualityConverter x:Key="Equality" />
    </Page.Resources>

    <Grid>
        <Grid Margin="10" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ui:Card Grid.Row="0" Margin="0,5,0,5" BorderBrush="DarkRed" BorderThickness="1" Background="#19FF0000">
                <ui:Card.Style>
                    <Style TargetType="ui:Card">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorMessage, TargetNullValue=''}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ErrorMessage, TargetNullValue={x:Null}}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Card.Style>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="DarkRed" TextWrapping="Wrap" />
            </ui:Card>

            <Grid Grid.Row="1" Margin="0,5,0,0">
                <ui:Card BorderThickness="1" Padding="10">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" FontSize="24" Glyph="&#xE7C4;"/>
                            <TextBlock Text="虚拟交换机列表" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                        <ui:Button HorizontalAlignment="Right" Content="{x:Static properties:Resources.refresh}" Command="{Binding LoadNetworkInfoCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBool}}" />
                    </Grid>
                </ui:Card>
            </Grid>

            <ItemsControl Grid.Row="2" ItemsSource="{Binding Switches}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SwitchViewModel}">
                        <ui:CardExpander Margin="0,5,0,0" IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                            <ui:CardExpander.Icon>
                                <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" FontSize="24" Glyph="{Binding IconGlyph}" />
                            </ui:CardExpander.Icon>
                            <ui:CardExpander.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding SwitchName}" FontSize="16" Margin="0,-2,0,0" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,4,0,0">
                                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="Red" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Fill" Value="Green" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsDefaultSwitch}" Value="True">
                                                            <Setter Property="Fill" Value="Orange" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding StatusText}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0"/>
                                    </StackPanel>
                                </Grid>
                            </ui:CardExpander.Header>

                            <StackPanel Margin="50,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="125" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="网络模式" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,4"/>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                        <RadioButton Content="桥接模式" Padding="8,6,8,4" GroupName="{Binding SwitchId}" IsChecked="{Binding SelectedNetworkMode, Converter={StaticResource Equality}, ConverterParameter=Bridge, Mode=TwoWay}" IsEnabled="{Binding IsDefaultSwitch, Converter={StaticResource InvertBool}}"/>
                                        <RadioButton Content="NAT模式" Padding="8,6,8,4" GroupName="{Binding SwitchId}" IsChecked="{Binding SelectedNetworkMode, Converter={StaticResource Equality}, ConverterParameter=NAT, Mode=TwoWay}" IsEnabled="{Binding IsDefaultSwitch, Converter={StaticResource InvertBool}}"/>
                                        <RadioButton Content="无上游" Padding="8,6,8,4" GroupName="{Binding SwitchId}" IsChecked="{Binding SelectedNetworkMode, Converter={StaticResource Equality}, ConverterParameter=Isolated, Mode=TwoWay}" IsEnabled="{Binding IsDefaultSwitch, Converter={StaticResource InvertBool}}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="上游网络" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,8"/>
                                    <ui:DropDownButton Grid.Row="1" Grid.Column="1" Content="{Binding DropDownButtonContent}" IsEnabled="{Binding IsUpstreamSelectionEnabled}" Margin="0,0,0,8">
                                        <ui:DropDownButton.Flyout>
                                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}" ItemsSource="{Binding MenuItems}">
                                                <ContextMenu.ItemContainerStyle>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Header" Value="{Binding}"/>
                                                        <Setter Property="Command" Value="{Binding PlacementTarget.DataContext.SelectUpstreamAdapterCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                        <Setter Property="CommandParameter" Value="{Binding}"/>
                                                    </Style>
                                                </ContextMenu.ItemContainerStyle>
                                            </ContextMenu>
                                        </ui:DropDownButton.Flyout>
                                    </ui:DropDownButton>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="宿主连接" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,0"/>
                                    <ui:ToggleSwitch Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" IsChecked="{Binding IsHostConnectionAllowed, Mode=TwoWay}" IsEnabled="{Binding IsHostConnectionToggleEnabled}" Margin="0,0,0,0"/>
                                </Grid>

                                <StackPanel Margin="0,12,0,10">
                                    <TextBlock Text="网络拓扑" FontSize="16" Margin="0,0,0,10" />
                                    <tools:TopologyCanvas 
                                        ItemsSource="{Binding ConnectedClients}"
                                        SwitchName="{Binding SwitchName}"
                                        NetworkMode="{Binding SelectedNetworkMode}"
                                        UpstreamAdapter="{Binding SelectedUpstreamAdapter}" />
                                </StackPanel>
                            </StackPanel>
                        </ui:CardExpander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Background="#7F000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <ui:ProgressRing IsIndeterminate="True" Width="60" Height="60" />
        </Grid>
    </Grid>
</Page>