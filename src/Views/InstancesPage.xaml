<Page
    x:Class="ExHyperV.Views.Pages.InstancesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:properties="clr-namespace:ExHyperV.Properties"
    xmlns:converters="clr-namespace:ExHyperV.Converters"
    xmlns:tools="clr-namespace:ExHyperV.Tools"
    Title="InstancesPage" mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000"
    tools:ScrollHelper.LockParentScroll="True">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:VmNameToIconConverter x:Key="VmNameToIconConverter" />
        <converters:OsTypeToImageConverter x:Key="OsTypeToImageConverter" />

        <!-- 修复：补回加载中模板 -->
        <DataTemplate x:Key="VmLoadingTemplate">
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ui:ProgressRing IsIndeterminate="True" Margin="0,0,0,10"/>
                    <TextBlock Text="{x:Static properties:Resources.DataLoading}" Opacity="0.5" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="VmDetailTemplate">
            <Grid Margin="24,12,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 头部信息 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 分割线/间距 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 状态与设置 -->
                    <RowDefinition Height="*"/>
                    <!-- 填充 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 底部操作栏 -->
                </Grid.RowDefinitions>

                <!-- 1. 顶部 Hero 区域：图标与核心信息 -->
                <Border Grid.Row="0" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" 
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                CornerRadius="8" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 系统图标 -->
                        <Border Grid.Column="0" CornerRadius="8" Background="{ui:ThemeResource ControlFillColorSecondaryBrush}" 
                        BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                        Width="100" Height="100">
                            <Image Source="{Binding OsType, Converter={StaticResource OsTypeToImageConverter}}" RenderOptions.BitmapScalingMode="HighQuality" 
                           Margin="16" Stretch="Uniform"/>
                        </Border>

                        <!-- 名称与配置 -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontSize="28" 
                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="GlanceHorizontal24" FontSize="16" Margin="0,0,8,0"
                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding ConfigSummary}" FontSize="14" 
                                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 2. 中间信息卡片区域 -->
                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左卡片：运行状态 -->
                    <Border Grid.Column="0" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" 
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                    CornerRadius="8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="运行状态" FontSize="14" 
                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Symbol="Pulse24" FontSize="20" Margin="0,0,12,0" 
                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding State}" FontSize="16" VerticalAlignment="Center" 
                                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Grid.Column="1"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ui:SymbolIcon Symbol="Timer24" FontSize="20" Margin="0,0,12,0" 
                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding Uptime}" FontSize="16" VerticalAlignment="Center" 
                                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 右卡片：系统类型设置 -->
                    <Border Grid.Column="2" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" 
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                    CornerRadius="8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="客户机类型" FontSize="14" 
                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>

                            <ComboBox HorizontalAlignment="Stretch" SelectedValue="{Binding OsType, Mode=TwoWay}" 
                              SelectedValuePath="Tag" Padding="12,8">
                                <ComboBoxItem Content="Windows" Tag="windows"/>
                                <ComboBoxItem Content="Linux" Tag="linux"/>
                                <ComboBoxItem Content="Android" Tag="android"/>
                                <ComboBoxItem Content="macOS" Tag="macos"/>
                                <ComboBoxItem Content="OpenWrt" Tag="openwrt"/>
                                <ComboBoxItem Content="fnOS" Tag="fnos"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 3. 底部操作栏 -->
                <Border Grid.Row="4" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" 
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                CornerRadius="8" Padding="16" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 主要电源操作 (左侧) -->
                        <StackPanel Orientation="Horizontal">
                            <ui:Button Content="启动" Icon="Play24" Appearance="Primary" 
                               Padding="24,10" FontSize="14" Margin="0,0,12,0"
                               Command="{Binding DataContext.ControlCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                               CommandParameter="Start"/>

                            <ui:Button Content="暂停" Icon="Pause24" Padding="16,10" Margin="0,0,12,0"
                               Command="{Binding DataContext.ControlCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                               CommandParameter="Suspend"/>

                            <ui:Button Content="重启" Icon="ArrowCounterclockwise24" Padding="16,10"
                               Command="{Binding DataContext.ControlCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                               CommandParameter="Restart"/>
                        </StackPanel>

                        <!-- 管理操作 (右侧) -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <ui:Button Content="保存" Icon="Save24" Padding="16,10" Margin="0,0,12,0"
                               Command="{Binding DataContext.ControlCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                               CommandParameter="Save"/>

                            <Rectangle Width="1" Fill="{ui:ThemeResource CardStrokeColorDefaultBrush}" Margin="0,4,12,4"/>

                            <ui:Button Content="关机" Icon="Stop24" Padding="16,10" Margin="0,0,12,0"
                               Command="{Binding DataContext.ControlCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                               CommandParameter="Stop"/>

                            <ui:Button Content="断电" Icon="Power24" Appearance="Danger" Padding="16,10"
                               Command="{Binding DataContext.ControlCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                               CommandParameter="TurnOff"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="10">
        <Grid IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="220" MaxWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{ui:ThemeResource ControlFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                <ui:ListView ItemsSource="{Binding VmList}" SelectedItem="{Binding SelectedVm, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <!-- 列表高度降低 -->
                            <Grid Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="{Binding Name, Converter={StaticResource VmNameToIconConverter}}" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <ContentControl Grid.Column="2" Content="{Binding SelectedVm}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource VmDetailTemplate}"/>
                        <Style.Triggers>
                            <Trigger Property="Content" Value="{x:Null}">
                                <Setter Property="ContentTemplate" Value="{StaticResource VmLoadingTemplate}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
        <ProgressBar VerticalAlignment="Top" Height="4" IsIndeterminate="True" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" Margin="-10,-10,-10,0"/>
    </Grid>
</Page>