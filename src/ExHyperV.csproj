    <None Remove="Assets\Gpuicons\NVIDIA.jpg" />
    <None Remove="Assets\Gpuicons\NVIDIA.png" />
    <None Remove="Assets\Gpuicons\Qualcomm.png" />
    <None Remove="Assets\Gpuicons\RTX.png" />
    <None Remove="Assets\Gpuicons\Silicon.png" />
